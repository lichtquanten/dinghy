{
    "name": "@workspace/api",
    "private": "true",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "start": "node src/server.ts",
        "typecheck": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@ai-sdk/deepinfra": "^1.0.23",
        "@ai-sdk/deepseek": "^1.0.23",
        "@ai-sdk/openai": "^2.0.52",
        "@hono-rate-limiter/redis": "^0.1.4",
        "@hono/clerk-auth": "^3.0.3",
        "@hono/node-server": "^1.19.5",
        "@hono/trpc-server": "^0.4.0",
        "@hono/zod-validator": "^0.7.4",
        "@redis/client": "^5.8.3",
        "@trpc/server": "^11.6.0",
        "@workspace/ai-models": "workspace:*",
        "@workspace/code-languages": "workspace:*",
        "ai": "^5.0.75",
        "hono": "^4.10.0",
        "hono-rate-limiter": "^0.4.2",
        "ioredis": "^5.8.1",
        "ollama-ai-provider-v2": "^1.5.0",
        "rate-limit-redis": "^4.2.2",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@types/node": "^24.8.0",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3"
    },
    "exports": {
        ".": {
            "types": "./src/index.ts"
        }
    },
    "imports": {
        "#config/*": "./src/config/*",
        "#infrastructure/*": "./src/infrastructure/*",
        "#integrations/*": "./src/integrations/*",
