{
    "name": "@workspace/api",
    "private": "true",
    "type": "module",
    "scripts": {
        "inject-env-vars": "envsub public/index.html",
        "dev": "concurrently \"tsdown --watch\" \"nodemon\"",
        "watch": "tsdown --watch",
        "build": "tsdown",
        "start": "node dist/server.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
