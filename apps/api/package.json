        "typecheck": "tsc --build; tsc --build --clean",
        "clean": "rm -rf dist/"
    },
    "dependencies": {
        "@ai-sdk/deepinfra": "^1.0.27",
        "@ai-sdk/deepseek": "^1.0.27",
        "@ai-sdk/openai": "^2.0.64",
        "@clerk/backend": "^2.21.0",
        "@hono-rate-limiter/redis": "^0.1.4",
        "@hono/clerk-auth": "^3.0.3",
        "@hono/node-server": "^1.19.6",
        "@hono/trpc-server": "^0.4.0",
        "@hono/zod-validator": "^0.7.4",
        "@redis/client": "^5.9.0",
        "@trpc/server": "^11.7.1",
        "@workspace/ai-models": "workspace:*",
        "@workspace/code-languages": "workspace:*",
        "@workspace/db": "workspace:*",
        "ai": "^5.0.89",
        "envsub": "^4.1.0",
        "hono": "^4.10.4",
        "hono-rate-limiter": "^0.4.2",
        "ioredis": "^5.8.2",
        "ollama-ai-provider-v2": "^1.5.2",
        "rate-limit-redis": "^4.2.3",
        "superjson": "^2.2.5",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@types/node": "^24.10.0",
        "concurrently": "^9.2.1",
        "nodemon": "^3.1.10",
        "tsdown": "^0.15.12",
        "tsup": "^8.5.0",
        "typescript": "^5.9.3"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts"
