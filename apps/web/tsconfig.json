{
    "extends": "@workspace/typescript-config/react.json",
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
        "types": ["vite/client"],
        "paths": {
            "@/components/*": ["./src/components/*"],
            "@/config/*": ["./src/config/*"],
            "@/api/*": ["./src/api/*"],
            "@/lib/*": ["./src/lib/*"],
            "@/hooks/*": ["./src/hooks/*"],
            "@/pages/*": ["./src/pages/*"],
            "@/types/*": ["./src/types/*"],
            "@/utils/*": ["./src/utils/*"],
            "@/assets/*": ["./src/assets/*"]
        }
    },
    "include": ["src"],
    "references": [
        { "path": "../../packages/ui" },
        { "path": "../../packages/ai-models" }
    ]
}
