{
    "extends": ["@tsconfig/svelte/tsconfig.json", "../../tsconfig.base.json"],
    "compilerOptions": {
      "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
      "target": "ES2023",
      "module": "ESNext",
      "moduleResolution": "bundler",

      "types": ["svelte", "vite/client"],

      "plugins": [
        {
          "name": "typescript-svelte-plugin",
          "enabled": true,
          "assumeIsSvelteProject": true
        }
      ]
    },

    "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte", "../api/src/trpc/router.ts"]
  }
