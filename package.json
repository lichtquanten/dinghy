{
    "name": "dinghy",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "pnpm -r --parallel dev",
        "build": "pnpm -r build",
        "lint": "pnpm -r --parallel lint",
        "lint:fix": "pnpm -r --parallel lint:fix",
        "format": "pnpm -r --parallel format",
        "format:check": "pnpm -r --parallel format:check",
        "typecheck": "pnpm -r --parallel typecheck",
        "clean": "pnpm -r --parallel clean",
        "docker:dev": "docker-compose -f docker-compose.dev.yml up",
        "docker:dev:build": "docker-compose -f docker-compose.dev.yml build",
        "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
        "docker:prod": "docker-compose up -d",
        "docker:prod:build": "docker-compose build",
        "docker:prod:down": "docker-compose down",
        "docker:prod:logs": "docker-compose logs -f",
        "docker:clean": "docker-compose down -v --rmi all"
    },
    "dependencies": {
        "@dotenvx/dotenvx": "^1.51.0",
        "@hono/node-server": "^1.19.5",
        "@trpc/client": "^11.6.0",
        "hono": "^4.10.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.37.0",
        "@types/node": "^24.8.0",
        "@typescript-eslint/utils": "^8.46.1",
        "@workspace/eslint-config": "workspace:*",
        "@workspace/typescript-config": "workspace:*",
        "dotenv-cli": "^10.0.0",
        "eslint": "^9.37.0",
        "eslint-plugin-react-refresh": "^0.4.24",
        "globals": "^16.4.0",
        "prettier": "^3.6.2",
        "prettier-plugin-svelte": "^3.4.0",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.1"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@clerk/shared",
            "@tailwindcss/oxide",
            "core-js-pure",
            "esbuild"
        ]
    },
    "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d",
    "volta": {
        "node": "24.9.0"
    }
}
