{
    "extends": "@workspace/typescript-config/react.json",

    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
        "composite": true,

        "strict": false,
        "noImplicitAny": false,
        "strictNullChecks": false,

        "paths": {
            "@workspace/ui/*": ["./src/*"]
        }
    },

    "include": ["src"],

    "exports": {
        "./globals.css": "./src/styles/globals.css",
        "./postcss.config": "./postcss.config.mjs",
        "./*": "./src/*"
    }
}
