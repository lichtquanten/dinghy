{
    "compilerOptions": {
        "composite": true,
        "declaration": true,

        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "moduleDetection": "force",
        "allowImportingTsExtensions": true,
        "noEmit": true,

        "esModuleInterop": true,
        "verbatimModuleSyntax": true,
        "isolatedModules": true,

        "sourceMap": true
    },
    "exclude": ["**/node_modules", "**/dist", "**/build"]
}
