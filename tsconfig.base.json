  "compilerOptions": {
    "composite": true,
    "declaration": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleDetection": "force",

    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,

    "sourceMap": true
  }
